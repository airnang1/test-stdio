<h1 class="mt-4">Add Post Page</h1>

<div class="ui container">
    <form action="/products/add" class="ui form" method="post">
        <div class="ui two fields">
            <div class="field">
                <label for="name">Post Tiltle</label>
                <input type="text" name="title" />
            </div>
            <div class="field">
                <label for="name">Description</label>
                <input type="text" name="description" />
            </div>
            <div class="field">
                <label for="name">Content</label>
                <input type="text" name="content" />
            </div>
            <div class="field">
                <label for="type">Post Type</label>
                <select name="status" id="">
          <option value="draft">Draft</option>
          <option value="public">Public</option>
        </select>
            </div>
        </div>
        <!-- HERE WE NEED TO USE FILEPOND -->
        <div></div>
        <div class="ui field">
            <label for="img">Image</label>
            <input type="file" name="img" id="img" class="filepond filepond--item" />
        </div>
        <div class="field">
            <label for="type">Category</label>
            <select name="category" id="">
        <% if(category) { %> <% category.forEach(m => { %>
        <option value="<%-m.name%>"><%-m.name%></option>

        <% }) %> <% } %>
      </select>
        </div>
        <button class="ui fluid blue button" id="btnAddPost" type="submit">
      Save
    </button>
    </form>
</div>

<br /><br />
